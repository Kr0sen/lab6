<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="450" d:DesignHeight="450"
        x:Class="lab6.Views.FirstView">
	<UserControl.Styles>
		<Style Selector="DatePicker.d">
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
		</Style>
		<Style Selector="Button.b">
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
		<Style Selector="Image.i">
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
		</Style>
	</UserControl.Styles>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="50*"/>
			<RowDefinition Height="500*"/>
			<RowDefinition Height="50*"/>
		</Grid.RowDefinitions>
		<DatePicker Classes="d" Grid.Row="0" Name="DatePickerFv"></DatePicker>
		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
			<ItemsControl Items="{Binding ItemsSelected}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="350*,50*,50*">
							<Grid.RowDefinitions>
								<RowDefinition MinHeight="30" Height="*" MaxHeight="50"/>
							</Grid.RowDefinitions>
							<TextBox Text="{Binding Name}" Grid.Row="0" Grid.Column="0" Focusable="False"/>
							<Button Classes="b" Grid.Row="0" Grid.Column="1">
								<Image Classes="i" Source="/Assets/in_zoom.ico"></Image>
							</Button>
							<Button Classes="b" Grid.Row="0" Grid.Column="2">
								<Image Classes="i" Source="/Assets/trash.ico"></Image>
							</Button>
						</Grid>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<Button Classes="b" Grid.Row="2">
			<Image Classes="i" Source="/Assets/add.ico"></Image>
		</Button>
	</Grid>
</UserControl>
